<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".video.AlgorithmViewerActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:background="#000000"
        style="@android:style/Theme.NoTitleBar.Fullscreen"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/linearLayout2" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout2"
        android:background="#636363">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c0c0ff"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/algorithmFpsLabel" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/algorithmResolutionSpinner"
                android:layout_alignParentStart="true"
                android:spinnerMode="dropdown" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/algorithmSelectionSpinner" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f0"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:id="@+id/algorithmParameters"></LinearLayout>

    </RelativeLayout>

</RelativeLayout>
